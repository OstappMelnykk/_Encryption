@{
    ViewData["Title"] = "Encounters Page";
}

<div>
    <h2>Frequency Table</h2>
    <table border="1">
        <thead>
            <tr>
                <th>Character</th>
                <th>Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in ViewBag.Encounters)
            {
                <tr>
                    <td>@entry.Key</td>
                    <td>@entry.Value</td>
                </tr>
            }
        </tbody>
    </table>
</div>


<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>